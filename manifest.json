{
    "manifest_version": 3,
    "name": "DementoCare",
    "version": "1.0.0",
    "description": "User-friendly chrome extension to aid patients suffering from dementia solve routine problems.",
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
},
    "permissions": [
    "notifications",
    "alarms",
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "idle",
    "unlimitedStorage",
    "scripting",
    "cookies",
    "accessibilityFeatures.read",
    "accessibilityFeatures.modify"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }